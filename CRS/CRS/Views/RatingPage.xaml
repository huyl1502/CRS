<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CRS.Views"
             x:Class="CRS.Views.RatingPage"
             xmlns:material3="clr-namespace:Plugin.MaterialDesignControls.Material3;assembly=Plugin.MaterialDesignControls"
             RootViewModel="{Binding}"
             ControlTemplate="{StaticResource BaseTemplate}"
             xmlns:vm="clr-namespace:CRS.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:RatingViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#4A6572</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="#f7f7f7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="{StaticResource Accent}" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
                <ContentView Padding="0,15" VerticalOptions="FillAndExpand">
                    <Image Source="hust_background_logo.png" VerticalOptions="Center" HeightRequest="125" />
                </ContentView>
            </StackLayout>
        </StackLayout>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled">
                    <material3:MaterialLabel
                        Type="TitleLarge"
                        Text="Xin quý khách vui lòng đánh giá chất lượng phục vụ" />
                </material3:MaterialCard>
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled">
                    <StackLayout Orientation="Vertical">
                        <material3:MaterialLabel
                        Type="LabelMedium"
                        Text="Giao dịch viên" />
                        <material3:MaterialLabel
                        Type="LabelLarge"
                        FontAttributes="Italic"
                        Text="HuyLq - Le Quang Huy" />
                    </StackLayout>
                </material3:MaterialCard>
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled">
                    <StackLayout>
                        <material3:MaterialLabel
                        Type="LabelMedium"
                        Text="Đánh giá" />
                        <material3:MaterialRating
                            ItemsByRow="20"
                            ItemSize="4"
                            SelectedIcon="starSelectedIcon.png" 
                            UnSelectedIcon="starUnselectedIcon.png" />
                    </StackLayout>
                </material3:MaterialCard>
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled">
                    <StackLayout>
                        <material3:MaterialLabel
                        Type="LabelMedium"
                        Text="Lý do không hài lòng" />
                        <material3:MaterialCheckbox 
                            Text="Phong cách giao tiếp chưa tốt"
                            Color="{StaticResource Primary}"/>
                        <material3:MaterialCheckbox 
                            Text="Nhân viên thao tác chậm"
                            Color="{StaticResource Primary}"/>
                        <material3:MaterialCheckbox 
                            Text="Lâu đến lượt giao dịch"
                            Color="{StaticResource Primary}"/>
                    </StackLayout>
                </material3:MaterialCard>
                <material3:MaterialButton
                    Text="Gửi" 
                    Command="{Binding OpenWebCommand}"
                    BackgroundColor="{StaticResource Primary}" />
            </StackLayout>
        </ScrollView>
    </Grid>
</local:BasePage>