<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRS.Views.RatingPage"
             xmlns:material3="clr-namespace:Plugin.MaterialDesignControls.Material3;assembly=Plugin.MaterialDesignControls"
             xmlns:vm="clr-namespace:CRS.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:RatingViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#e15164</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="#f7f7f7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled"
                    CornerRadius="10">
                    <Label Text="Start Rating now" FontSize="Title"/>
                </material3:MaterialCard>
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled"
                    CornerRadius="10">
                    <Label Text="1. Employee"
                       FontSize="16" Padding="0,0,0,0"/>
                </material3:MaterialCard>
                <material3:MaterialCard
                    BackgroundColor="White"
                    Type="Filled"
                    CornerRadius="10">
                    <StackLayout>
                        <Label Text="2. Rating"
                            FontSize="16" Padding="0,0,0,0"/>
                        <material3:MaterialRating
                            ItemsByRow="10"
                            ItemSize="4"
                            SelectedIcon="starSelectedIcon.png" 
                            UnSelectedIcon="starUnselectedIcon.png" />
                    </StackLayout>
                </material3:MaterialCard>
                <material3:MaterialButton
                    Text="Submit" 
                    Command="{Binding OpenWebCommand}"
                    BackgroundColor="{StaticResource Primary}" />
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

